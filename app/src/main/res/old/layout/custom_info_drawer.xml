<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="207.3dp"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="18.3dp"
    android:background="#e1e1e1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/appinfo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13.5dp"
        android:paddingTop="31.5dp"
        android:paddingBottom="31.5dp"
        android:background="@drawable/bg_dialog_background"
        >
        <TextView
            android:id="@+id/tv1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/source_sans_roman_regula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23.8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Version"
                android:textSize="17sp"
                android:fontFamily="@font/source_sans_roman_regula"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40.5dp"
                android:textColor="#000000"
                android:text="2.0.0"
                android:textSize="17sp"
                android:fontFamily="@font/source_sans_roman_regula"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:id="@+id/drawer_btn_ask"
            android:orientation="horizontal"
            android:layout_marginTop="26.3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/seoul_namsan_m"
                android:text="문의사항"/>

            <ImageView
                android:layout_marginLeft="6.8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_inquiry"
                android:text="icon"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/teaminfo"
        app:layout_constraintTop_toBottomOf="@id/appinfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="57.5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/seoul_namsan_m"
                android:textColor="#000000"
                android:text="개발자(Android)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/seoul_namsan_m"
                android:textColor="#000000"
                android:text="개발자(IOS)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/seoul_namsan_m"
                android:textColor="#000000"
                android:text="디자이너"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/seoul_namsan_m"
                android:textColor="#000000"
                android:text="손민재"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/seoul_namsan_m"
                android:textColor="#000000"
                android:text="이준상"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/seoul_namsan_m"
                android:textColor="#000000"
                android:text="김리현"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/note"
        android:textSize="13sp"
        android:fontFamily="@font/seoul_namsan_l"
        android:textColor="#000000"
        android:layout_marginTop="29.8dp"
        android:lineSpacingExtra="7sp"
        app:layout_constraintTop_toBottomOf="@id/teaminfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="이 데이터는 계산한 수치 값으로
정확하지 않을 수 있습니다"/>

    <TextView
        android:id="@+id/note2"
        android:textSize="10sp"
        android:fontFamily="@font/seoul_namsan_l"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/note3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="2.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이 앱은 공공데이터를 이용한 앱입니다"/>

    <TextView
        android:textColor="#000000"
        android:textSize="10sp"
        android:fontFamily="@font/seoul_namsan_l"
        android:id="@+id/note3"
        android:layout_marginBottom="19.3dp"
        android:layout_marginLeft="2.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This application uses Open Data"/>
</android.support.constraint.ConstraintLayout>
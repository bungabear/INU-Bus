<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.bungabear.inubus.old.RecyclerItemModel"/>

    </data>

    <android.support.constraint.ConstraintLayout

        android:layout_height="49.5dp"
        android:layout_width="match_parent"
        >

        <View
            android:id="@+id/recycler_businfo_touchview"
            android:layout_width="308.3dp"
            android:layout_height="39.5dp"
            android:layout_marginLeft="35dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_marginLeft="15.5dp"
            android:layout_width="@dimen/bus_favicon_size"
            android:layout_height="@dimen/bus_favicon_size"
            android:background="@drawable/custom_checkbox_favorite"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_busno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/seoul_namsan_m"
            android:text="@{item.busNo}"
            android:textSize="@dimen/bus_num_textsize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_arrival"
            android:layout_width="@dimen/bus_num_info_width"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="145.8dp"
            android:fontFamily="@font/seoul_namsan_m"
            android:text="@{item.arrival}"
            android:textSize="@dimen/bus_num_info_textsize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_interval"
            android:layout_width="@dimen/bus_num_info_width"
            android:layout_height="12dp"
            android:layout_marginLeft="250dp"
            android:textColor="#000000"
            android:fontFamily="@font/seoul_namsan_m"
            android:text="@{item.interval}"
            android:textSize="@dimen/bus_num_info_textsize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>
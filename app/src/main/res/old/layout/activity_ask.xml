<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="문의하기"
            android:fontFamily="@font/seoul_namsan_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="28dp">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12.8dp">

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:text="제목" />

                <EditText
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/ask_et_title"
                    android:layout_width="261.8dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ask_rounded_et"
                    android:fontFamily="@font/seoul_namsan_b" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20.5dp">

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:text="연락처" />

                <EditText
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/ask_et_contact"
                    android:layout_width="261.8dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ask_rounded_et"
                    android:fontFamily="@font/seoul_namsan_b" />

            </android.support.constraint.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seoul_namsan_b"
                android:text="내용"
                android:textSize="13sp"
                android:textColor="#000000"
                android:paddingBottom="6dp"
                />


            <EditText
                android:id="@+id/ask_et_msg"
                android:padding="10dp"
                android:layout_width="302dp"
                android:layout_height="167dp"
                android:gravity="top|left"
                android:background="@drawable/bg_ask_rounded_et"
                android:inputType="textMultiLine" />

            <Button
                android:layout_marginTop="23dp"
                android:id="@+id/ask_btn_submit"
                android:layout_width="206dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_ask_send_button"
                android:fontFamily="@font/seoul_namsan_b"
                android:textSize="13sp"
                android:textColor="#000000"
                android:text="등 록" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
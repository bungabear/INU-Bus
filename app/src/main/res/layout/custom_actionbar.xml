<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="0dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_magicon"
        android:layout_width="@dimen/searchview_magicon_size"
        android:layout_height="@dimen/searchview_magicon_size"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_magicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/search_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/searchview_magicon_margin_left"
        android:layout_marginRight="@dimen/searchview_magicon_margin_right"/>


    <AutoCompleteTextView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/searchview_height"
        android:background="@android:color/white"
        android:hint="@string/search_hint"
        android:textColor="@android:color/black"
        android:textColorHint="@color/search_hint"
        android:textSize="@dimen/searchview_textsize"
        android:fontFamily="@font/seoul_namsan_m"
        android:paddingBottom="@dimen/searchview_margin_bottom"
        android:paddingLeft="@dimen/searchview_margin_left"
        android:paddingTop="@dimen/searchview_margin_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_magicon"
        app:layout_constraintRight_toLeftOf="@+id/actionbar_info"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/actionbar_info"
        android:layout_width="@dimen/infoicon_size"
        android:layout_height="@dimen/infoicon_size"
        android:background="@drawable/ic_vt_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_view"
        android:layout_marginRight="@dimen/infoicon_margin_right"
        android:layout_marginLeft="@dimen/infoicon_margin_right"
        />


</android.support.constraint.ConstraintLayout>
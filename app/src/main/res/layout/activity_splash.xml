<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:scaleType="fitCenter"
        android:src="@drawable/splash_logo"
        android:transitionName="appicon"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/iv_splash_text"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="9.5dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/source_sanspro_semibold_it"
        android:scaleType="fitCenter"
        android:text="INU BUS"
        android:textSize="26.86dp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:transitionName="appicon"

        app:layout_constraintLeft_toLeftOf="@+id/iv_splash_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash_logo" />

</android.support.constraint.ConstraintLayout>

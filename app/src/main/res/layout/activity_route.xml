<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68.5dp"
        android:layout_marginTop="-3dp">

        <TextView
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/route_busno"
            android:text="6"
            android:textSize="33sp"
            android:textColor="#2f60ce"
            android:fontFamily="@font/seoul_namsan_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="236.8dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_button">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:text="첫차"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/route_start"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seoul_namsan_m"
                    android:textSize="13sp"
                    android:text="5:00"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:text="막차"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/route_end"
                    android:fontFamily="@font/seoul_namsan_m"
                    android:textSize="13sp"
                    android:text="23:00"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:text="요금"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seoul_namsan_b"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/route_fee"
                    android:layout_gravity="center"
                    android:fontFamily="@font/seoul_namsan_m"
                    android:textSize="13sp"
                    android:text="1250원"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/route_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/recyclerview_route">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>